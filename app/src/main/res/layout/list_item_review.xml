<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#DEDEDE"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/box_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImg"
                android:layout_margin="10dp"
                android:src="@drawable/man"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="top"
                    android:textColor="@color/softblack"
                    android:text="닉네임"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pin"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/areatxt"
                        android:textColor="@color/softblack"
                        android:layout_gravity="center"
                        android:text="지역"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/restauranttxt"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/softblack"
                        android:layout_gravity="center"
                        android:text="가게이름"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/contenttxt"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="| 리뷰 내용"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:id="@+id/horizonImgView"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </HorizontalScrollView>
            <ImageView
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/review1"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/review2"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/review3"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:layout_gravity="center|right"
                android:layout_margin="20dp"
                android:src="@drawable/more"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/divider_gray_line"
                    android:text="좋아요"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/liketxt"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/divider_gray_line"
                    android:text="32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/divider_gray_line"
                    android:text="개"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/divider_gray_line"
                    android:text="댓글"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/reviewtxt"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/divider_gray_line"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/divider_gray_line"
                    android:text="개"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:padding="7dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/like"/>
                <ImageView
                    android:layout_gravity="center"
                    android:padding="7dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/comment"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>